// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["interactiveTransactions"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model Usuario {
    id          Int         @id @unique @default(autoincrement())
    nombre      String?     //  el signo de '?' indica que el campo puede contener valores nulos
    email       String      @unique
    password    String
    rol         USUARIO_ROL @default(CLIENTE)
    validado    Boolean     @default(false)
    pedidos     Pedido[]
    //  define el nombre de la tabla al
    @@map("usuarios")
}

model Producto {
    id          Int @id @default(autoincrement())
    nombre      String
    precio      Float
    unidadMedida   UM_PRODUCTO      @map("unidad_medida")
    categoria   CATEGORIA_PRODUCTO

    detallePedidos  DetallePedido[]

    @@map("productos")
}

model Pedido {
    id              Int                 @id @unique @default(autoincrement())
    fecha           DateTime            @db.Date    //  Tipo de Date Date
    total           Float
    estado          PEDIDO_ESTADO
    process_id      String?             @map("process_id")
    clienteId       Int                 @map("cliente_id")
    cliente         Usuario             @relation(fields: [clienteId], references: [id])

    detallePedidos  DetallePedido[]

    @@map("pedidos")
}

model DetallePedido {
    id              Int             @id @unique @default(autoincrement())
    cantidad        Float
    subTotal        Float           @map("sub_total")
    unidadMedida    UM_PRODUCTO
    productoId      Int             @map("producto_id")
    pedidoId        Int             @map("pedido_id")

    producto        Producto        @relation(fields: [productoId], references: [id])
    pedido          Pedido          @relation(fields: [pedidoId], references: [id])

    @@map("detalle_pedidos")
}

enum PEDIDO_ESTADO {
    CREADO
    ACEPTADO
    PAGADO
    ERROR
}
enum USUARIO_ROL {
    ADMINISTRADOR
    CLIENTE
}
enum UM_PRODUCTO {
    KG
    UNIDAD
}
enum CATEGORIA_PRODUCTO {
    VERDURA
    ELECTRODOMESTICO
    LIMPIEZA
    OTROS
}
